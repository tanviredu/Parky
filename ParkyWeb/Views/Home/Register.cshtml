@model ParkyWeb.Models.User
@{
    ViewData["Title"] = "Register";
}

<form method="post">
    <fieldset>
        <legend>Register</legend>
        <div class="form-group">
            <label asp-for="UserName">UserName</label>
            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter UserName">
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        </div>
        <div class="form-group">
            <label asp-for="Role">Role</label>
            <input asp-for="Role" type="text" class="form-control" placeholder="Enter Role">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </fieldset>
</form>

